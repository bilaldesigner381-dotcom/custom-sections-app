{% if shop.metafields.section_master.subscription_status == "active" %}
  <!-- Paid content -->
  {{ block.settings.content }}
{% else %}
  <!-- Locked message -->
  <div style="text-align:center; padding:2rem; border:2px dashed #ccc;">
    <h3>ðŸ”’ This section is premium</h3>
    <p>Upgrade to <strong>Section Master Pro</strong> to unlock this section.</p>
    <a href="/apps/section-master/upgrade" class="button">Upgrade Now</a>
  </div>
{% endif %}

<div class="services-section" style="background: {{ block.settings.bg_color }}; padding: {{ block.settings.section_padding }}px 0; margin: {{ block.settings.section_margin }}px 0;">
  <div class="services-container">
    {% if block.settings.heading != blank %}
      <h2 class="services-heading" style="font-size: {{ block.settings.heading_size }}px;">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="services-grid">
      <!-- Service 1 -->
      <div class="service-item">
        {% if block.settings.icon_1 != blank %}
          <div class="service-icon">
            <img src="{{ block.settings.icon_1 | image_url: width: 80 }}" alt="{{ block.settings.title_1 }}">
          </div>
        {% endif %}
        <h3 class="service-title" style="font-size: {{ block.settings.title_size }}px;">{{ block.settings.title_1 }}</h3>
        <p class="service-desc" style="font-size: {{ block.settings.desc_size }}px;">{{ block.settings.desc_1 }}</p>
      </div>

      <!-- Service 2 -->
      <div class="service-item">
        {% if block.settings.icon_2 != blank %}
          <div class="service-icon">
            <img src="{{ block.settings.icon_2 | image_url: width: 80 }}" alt="{{ block.settings.title_2 }}">
          </div>
        {% endif %}
        <h3 class="service-title" style="font-size: {{ block.settings.title_size }}px;">{{ block.settings.title_2 }}</h3>
        <p class="service-desc" style="font-size: {{ block.settings.desc_size }}px;">{{ block.settings.desc_2 }}</p>
      </div>

      <!-- Service 3 -->
      <div class="service-item">
        {% if block.settings.icon_3 != blank %}
          <div class="service-icon">
            <img src="{{ block.settings.icon_3 | image_url: width: 80 }}" alt="{{ block.settings.title_3 }}">
          </div>
        {% endif %}
        <h3 class="service-title" style="font-size: {{ block.settings.title_size }}px;">{{ block.settings.title_3 }}</h3>
        <p class="service-desc" style="font-size: {{ block.settings.desc_size }}px;">{{ block.settings.desc_3 }}</p>
      </div>

      <!-- Service 4 -->
      <div class="service-item">
        {% if block.settings.icon_4 != blank %}
          <div class="service-icon">
            <img src="{{ block.settings.icon_4 | image_url: width: 80 }}" alt="{{ block.settings.title_4 }}">
          </div>
        {% endif %}
        <h3 class="service-title" style="font-size: {{ block.settings.title_size }}px;">{{ block.settings.title_4 }}</h3>
        <p class="service-desc" style="font-size: {{ block.settings.desc_size }}px;">{{ block.settings.desc_4 }}</p>
      </div>
    </div>
  </div>
</div>

<style>
.services-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
  text-align: center;
}
.services-heading {
  font-weight: bold;
  margin-bottom: 40px;
}
.services-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30px;
}
.service-item {
  background: #fff;
  padding: 20px;
  border-radius: 12px;
  box-shadow: 0 6px 15px rgba(0,0,0,0.1);
  transition: transform 0.3s ease;
}
.service-item:hover {
  transform: translateY(-5px);
}
.service-icon img {
  max-width: 60px;
  margin-bottom: 15px;
}
.service-title {
  font-weight: bold;
  margin-bottom: 10px;
}
.service-desc {
  color: #555;
}
@media (max-width: 991px) {
  .services-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}
@media (max-width: 576px) {
  .services-grid {
    grid-template-columns: 1fr;
  }
}
</style>

{% schema %}
{
  "name": "Services / Features",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why Shop With Us?"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 16,
      "max": 48,
      "step": 2,
      "default": 28,
      "label": "Heading Font Size"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#f9f9f9"
    },
    {
      "type": "range",
      "id": "section_padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 50,
      "label": "Section Padding"
    },
    {
      "type": "range",
      "id": "section_margin",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20,
      "label": "Section Margin"
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 12,
      "max": 32,
      "step": 2,
      "default": 18,
      "label": "Service Title Font Size"
    },
    {
      "type": "range",
      "id": "desc_size",
      "min": 12,
      "max": 24,
      "step": 2,
      "default": 14,
      "label": "Service Description Font Size"
    },
    {
      "type": "image_picker",
      "id": "icon_1",
      "label": "Icon 1"
    },
    {
      "type": "text",
      "id": "title_1",
      "label": "Title 1",
      "default": "Free Shipping"
    },
    {
      "type": "text",
      "id": "desc_1",
      "label": "Description 1",
      "default": "Enjoy free shipping on all orders."
    },
    {
      "type": "image_picker",
      "id": "icon_2",
      "label": "Icon 2"
    },
    {
      "type": "text",
      "id": "title_2",
      "label": "Title 2",
      "default": "24/7 Support"
    },
    {
      "type": "text",
      "id": "desc_2",
      "label": "Description 2",
      "default": "Our team is here to help anytime."
    },
    {
      "type": "image_picker",
      "id": "icon_3",
      "label": "Icon 3"
    },
    {
      "type": "text",
      "id": "title_3",
      "label": "Title 3",
      "default": "Easy Returns"
    },
    {
      "type": "text",
      "id": "desc_3",
      "label": "Description 3",
      "default": "Hassle-free 30-day returns."
    },
    {
      "type": "image_picker",
      "id": "icon_4",
      "label": "Icon 4"
    },
    {
      "type": "text",
      "id": "title_4",
      "label": "Title 4",
      "default": "Secure Checkout"
    },
    {
      "type": "text",
      "id": "desc_4",
      "label": "Description 4",
      "default": "100% safe and secure checkout process."
    }
  ]
}
{% endschema %}








